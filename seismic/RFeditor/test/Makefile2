BIN=testplotter
ldlibs=-lseispp -ltrvltm -lbrttutil $(TRLIBS) $(DBLIBS) -L$(XMOTIFLIB) \
       -L$(BOOSTLIB) -lboost_thread -lboost_system -lseisppplot -lseisw -lXm -lXt -lperf -lgclgrid -lpwmig $(X11LIBS)

ANTELOPEMAKELOCAL = $(ANTELOPE)/local/include/antelopemake.local
include $(ANTELOPEMAKE)  	
include $(ANTELOPEMAKELOCAL)

CXXFLAGS += -I$(XMOTIFINCLUDE)
CXXFLAGS += -I$(BOOSTINCLUDE)
# for valgrind only
CXXFLAGS += -O0 
OBJS=testplotter.o
$(BIN) : $(OBJS)
	$(RM) $@
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS) $(LDFLAGS) $(LDLIBS)
